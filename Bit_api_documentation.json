      {
        "name": "Create Bit",
        "method": "POST",
        "endpoint": "/api/Bit/create/",
        "description": "Creates a new bit with optional file uploads",
        "authentication": "JWT Token required (with Company permissions)",
        "request": {
          "content_type": "multipart/form-data",
          "parameters": {
            "tender_id": {
              "type": "integer",
              "required": true,
              "location": "form",
              "description": "The ID of the tender to create a bit for"
            },
            "title": {
              "type": "string",
              "required": true,
              "location": "form",
              "description": "Title of the bit"
            },
            "description": {
              "type": "string",
              "required": true,
              "location": "form",
              "description": "Description of the bit"
            },
            "date": {
              "type": "string (ISO date)",
              "required": true,
              "location": "form",
              "description": "Date for the bit"
            },
            "cost": {
              "type": "number",
              "required": true,
              "location": "form",
              "description": "Cost/budget for the bit"
            },
            "files": {
              "type": "file",
              "required": false,
              "location": "form",
              "description": "File(s) to upload with the bit",
              "multiple": true
            }
          },
          "example_request": {
            "tender_id": 1,
            "title": "Construction Proposal C",
            "description": "Detailed proposal for construction project with timeline and resources",
            "date": "2025-06-15T09:00:00Z",
            "cost": "42500.00",
            "files": ["file1.pdf", "file2.xlsx"]
          }
        },
        "responses": {
